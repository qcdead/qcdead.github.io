/* CSS Reset */
body,main, h1, h2, img, ul {
	margin: 0;
	padding: 0;
	border: 0;
}

body {
	background-color: #000;
}

img {
	max-width: 25%;
	max-height: 300px;
	display: block;
	transition: transform 0.25s ease;
	margin-left: auto;
	margin-right: auto;
}

main {
	background-color: #000;
	padding: 2%;
	font-size: 1.15em;
	font-family: 'Roboto', serif;
	color: #FFF;
	text-align: left;
}

img:hover {
	-webkit-transform:scale(3); /* or some other value */
	transform:scale(3);
}